@model Bookish.Web.Models.AddBookViewModel
@{
    ViewData["Title"] = "AddBook";
}

<h1>Add a new book to the library!</h1>
@foreach (var message in Model.ErrorMessage)
{
    <p class="text-danger">@message</p>
}

<form asp-action="AddBookPost">
    <div class="form-group row">
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">Title:</div>
            </div> 
            <input id="title" name="title" type="text" class="form-control" required="required" value="@Model.Title">
        </div>
    </div>
    <div class="form-group row">
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">ISBN:</div>
            </div> 
            <input id="isbn" name="isbn" type="text" class="form-control" required="required" value="@Model.Isbn">
        </div>
    </div>
    <div class="form-group row">
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">Authors:</div>
            </div> 
            <input id="authors" name="authors" type="text" class="form-control" required="required" value="@Model.Authors">
        </div>
    </div>
    <div class="form-group row">
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">Number Of Copies</div>
            </div> 
            <input id="copies" name="copies" type="number" required="required" class="form-control" value="@Model.Copies">
        </div>
    </div> 
    <div class="form-group row">
        <button name="submit" type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>