@model Bookish.Web.Models.BookViewModel
@{
    ViewData["Title"] = Model.Book.title;
}

<h1>@ViewData["Title"]</h1>
<p>by @Model.Book.authors</p>

<div>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th style="width: 40%">Copy Number</th>
                <th style="width: 60%"></th>
            </tr>
        </thead>

        @foreach (var bookCopy in Model.Book.bookCopies)
        {
            <tr>
                <td>@bookCopy.bookId</td>
                <td>
                    <a class="btn btn-info @Model.IsDisabled(bookCopy)"
                       asp-action="Book"
                       asp-route-isbn="@Model.Book.isbn">Borrow</a>
                    @Model.OwnedBy(bookCopy)
                </td>
            </tr>
        }

    </table>
</div>
